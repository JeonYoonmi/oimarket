<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig
	PUBLIC "-//ibatis.apache.org//DTD SQL MAP Config 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
<!-- iBatis의 환경 설정용 xml문서 입니다. -->
<sqlMapConfig>
	<!-- 
		DB와 연결하는 정보가 저장된 properties파일을 읽어와서 사용할 수 있게 한다.
	 -->
	 <properties resource="kr/co/oi/config/dbinfo.properties"/>
	 
	 <!-- 각각의 sqlMap.xml 파일의 네임스페이스와 id속성값을 연결해서 실행할 쿼리문을 선택할 수 있게 한다. -->
	 <settings useStatementNamespaces="true"/>
	 
	 <!-- 
	 	쿼리문에 사용할 VO객체는 패키지 이름을 포함한 전체 이름을 사용해야 하는데 그렇게 되면 문장이 너무 길어질 수 있다.
	 	그래서 이 긴 이름을 대신해 사용할 alias를 설정할 수 있다.
	 	
	 	형식 : <typeAlias alias="alias명" type="클래스의 전체이름"/>
	  -->
	  <typeAlias alias="memberVO" type="kr.co.oi.VO.MemberVO"/>
	  <typeAlias alias="ctgVO" type="kr.co.oi.VO.CategoryVO"/>
	  <typeAlias alias="ChatRoomVO" type="kr.co.oi.VO.ChatRoomVO"/>
	  <typeAlias alias="ChatContVO" type="kr.co.oi.VO.ChatContVO"/>
	  <typeAlias alias="noticeVO" type="kr.co.oi.VO.NoticeVO"/>
	  <typeAlias alias="mpostVO" type="kr.co.oi.VO.MpostVO"/>
	  <typeAlias alias="mpostImgVO" type="kr.co.oi.VO.MpostImgVO"/>
	  <typeAlias alias="zzimVO" type="kr.co.oi.VO.ZzimVO"/>
			  
	 <!-- DB와 연결을 처리하는 부분 -->
	 <transactionManager type="JDBC">
		<dataSource type="SIMPLE">
	 		<property name="JDBC.Driver" value="${driver}"/>
	 		<property name="JDBC.ConnectionURL" value="${url}"/>
	 		<property name="JDBC.Username" value="${user}"/>
	 		<property name="JDBC.Password" value="${pass}"/>
	 	</dataSource>
	 </transactionManager>
	  
	  <!-- 
	  	실행할 SQL문 등록하기
	  	 - 실행할 SQL문은 xml문서로 따로 만든 후 그 xml문서를 아래와 같이 등록하면 된다.
	  	 형식) <sqlMap resouce="경로명/파일명.xml/>
	   -->
	   <sqlMap resource = "kr/co/oi/mapper/Member.xml"/>
	   <sqlMap resource = "kr/co/oi/mapper/interestctg.xml"/>
	   <sqlMap resource = "kr/co/oi/mapper/chat.xml"/>
	   <sqlMap resource = "kr/co/oi/mapper/notice.xml"/>
	   <sqlMap resource = "kr/co/oi/mapper/Mpost.xml"/>
	   <sqlMap resource = "kr/co/oi/mapper/Zzim.xml"/>
</sqlMapConfig>






